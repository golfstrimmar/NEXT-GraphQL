datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String? // для локальной авторизации
  googleId  String? // для Google OAuth
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
